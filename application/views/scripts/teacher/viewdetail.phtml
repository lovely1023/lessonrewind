	{
		if($('#renamefrom_'+idval).valid())
		{
			$('#wrap').show();
			var filename=$('#video_name_'+idval).val();
			$.ajax({
			url: baseUrl+"/teacher/checkfile/lesson_id/<?php echo $this->lesson_id ?>/la_id/"+idval+"/filename/"+filename,
