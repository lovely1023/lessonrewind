			success: function(data){
				if(data==1)
				{
						$.ajax({
						url: baseUrl+"/teacher/reamefile/lesson_id/<?php echo $this->lesson_id ?>/la_id/"+idval+"/filename/"+filename,
						data:"",
						success: function(data){
							
							$('#wrap').hide();
							$('#attach_'+idval).addClass('hide');
							$('#la_name_'+idval).html(data);
							
							}
						});
				}
				else
				{
					$('#wrap').hide();
					alert("Please use unique name");	
				}
			}
			});
			
		}
	}
